@using Delivery.Common.Enums
@model UserEditModel

<button class="btn btn-outline-warning btn-sm px-4 ms-2" data-bs-toggle="modal" data-bs-target="#modal-@Model.Id">Edit</button>
<div class="modal fade" id="modal-@Model.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content bg-dark" asp-controller="User" asp-action="EditUser" method="Post">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">User editing</h1>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="Id" value="@Model.Id">
                <div class="form-floating mb-3">
                    <input type="text" asp-for="FullName" value="@Model.FullName" class="form-control" id="editName">
                    <label for="editName" class="text-black">Name<span class="text-danger">*</span></label>
                </div>
                <select class="form-select mb-3" asp-for="Gender">
                    <option value="@Gender.Female">Female</option>
                    <option value="@Gender.Male">Male</option>
                </select>
                <select class="selectpicker w-100" multiple asp-for="Roles">
                    <option value="@RoleType.Administrator">Administrator</option>
                    <option value="@RoleType.Manager">Manager</option>
                    <option value="@RoleType.Cook">Cook</option>
                    <option value="@RoleType.Courier">Courier</option>
                    <option value="@RoleType.Customer">Customer</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>
@model AddManagerModel

<form class="card" asp-controller="Restaurant" asp-action="AddManager" method="Post">
    <div class="card-body d-flex">
        <div class="col">
            <input type="text" class="form-control mb-1" asp-for="Email" placeholder="user@example.com">
            <input type="hidden" class="form-control" asp-for="RestaurantId" value="@Model.RestaurantId">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="">
            <button type="submit" class="btn btn-primary ms-1 px-5">Add</button>
        </div>
    </div>
</form>
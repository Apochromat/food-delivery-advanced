@using Delivery.Common.Enums
@model RestaurantSearchModel

<form class="row row-cols-xl-4 row-cols-md-2 row-cols-1 pt-2 rounded" asp-controller="Restaurant" asp-action="Index" method="Get" id="search">
    <div class="pt-1">
        <input asp-for="Name" value="@Model.Name" class="form-control w-100" placeholder="Claude Monet">
    </div>
    <div class="pt-1">
        <select asp-for="Sort" class="form-select w-100">
            <option value=@RestaurantSort.NameAsc>По возрастанию алфавита</option>
            <option value=@RestaurantSort.NameDesc>По убыванию алфавита</option>
        </select>
    </div>
    <div class="pt-1">
        <select asp-for="IsArchived" class="form-select w-100">
            <option value=@null>Все</option>
            <option value=@true>Архивированные</option>
            <option value=@false>Не архивированные</option>
        </select>
    </div>
    <div class="pt-1">
        <button type="submit" class="btn btn-primary end-0 w-100 float-end searchSubmit" id="searchSubmit">Применить</button>
    </div>
</form>